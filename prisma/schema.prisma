// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relaciones
  savings   Saving[]
  expenses  Expense[]
}

model Saving {
  id          String   @id @default(cuid())
  amount      Float
  currency    String   // "USD", "MXN", "EUR", etc.
  type        String   // "cash", "bank", "crypto"
  description String?
  date        DateTime @default(now())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}



model Expense {
  id          String   @id @default(cuid())
  amount      Float
  currency    String
  type        String   // "food", "transport", "entertainment", "bills", "other"
  category    String   // "essential", "discretionary", "emergency"
  description String?
  date        DateTime @default(now())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
